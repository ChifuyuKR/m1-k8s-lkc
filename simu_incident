apiVersion: v1
kind: ConfigMap
metadata:
  name: kubeshop-web-nginx
  namespace: kubeshop-lkc
data:
  default.conf: |
    server {
      listen 8080;
      server_name _;

      location / {
        root /usr/share/nginx/html;
        index index.html;
      }

      location /api/ {
        proxy_set_header Host $host;
        proxy_set_header X-Forwarded-For $remote_addr;
        proxy_pass http://mauvais-service:80/;
      }
    }

kubectl delete deploy kubeshop-web -n kubeshop-lkc

kubectl apply -f templates/

kubectl -n ingress-nginx port-forward svc/ingress-nginx-controller 8080:80

curl -i -H "Host: kubeshop.local" http://localhost:8080/
